= simple_form_for @question do |f|
    = f.input :title, required: true, placeholder: 'Sua pergunta'
    %br
    = f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'mini'}}, label: false, required: true
    %br
    = f.input :tag_list, label: 'Lista de TAGs (separada por v√≠rgulas).', placeholder: 'Ex: Filipenses, Paulo'

    = f.button :submit, class: 'button'
